

<center>
    <h2>Listado de Emociones</h2>
</center>
<br>

<div class="table responsive" >
    <table class="table table-bordered table-dark">
        <tr>
            <th >Nombre</th>
            <th >Apellido</th>
            <th >Estado de ánimo</th>
            <th >Descripción</th>
        </tr>
        {{#each listado}}
            <tr>
                <td>{{this.nombre}}</td>
                <td >{{this.apellido}}</td>
                <td>{{this.estado}}</td>
                <td >{{this.description}}</td>
                <td  ><a href="/borrar/{{this._id}}" class="btn btn-light">Borrar</a></td>
                <td ><a href="/editar/{{this._id}}" class="btn btn-light">Modificar</a></td>
            </tr>
        {{/each}}
    </table>

</div>
<center>
    <a href="/alta" class="btn btn-dark">Agregar Emociones</a>
</center>
